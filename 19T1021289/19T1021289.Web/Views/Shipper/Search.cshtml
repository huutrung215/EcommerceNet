@model _19T1021289.Web.Models.ShipperSearchOutput

@{
    Layout = null;
}

<p>Có <strong>@string.Format("{0:N0}", @Model.RowCount)</strong> người giao hàng trong tổng số <strong>@string.Format("{0:N0}", @Model.PageCount)</strong> trang</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Số điện thoại</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.ShipperName</td>
                <td>@item.Phone</td>
                <td class="text-right">
                    <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-primary">Sửa</a>
                </td>
                <td>
                    <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>