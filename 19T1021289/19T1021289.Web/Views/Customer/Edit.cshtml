@model _19T1021289.DomainModels.Customer
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Customer/Save" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CustomerID)
            <div class="form-group">
                <label class="control-label col-sm-2" for="">Tên khách hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.CustomerName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Liên hệ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Quốc gia:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Country,
                                          SelectListHelper.Countries(),
                                          new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.City, "", new { @style = "color:#f00" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:#f00" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.PostalCode, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Lưu dữ liệu</button>
                    <a href="~/Customer" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>


