@model _19T1021289.Web.Models.CustomerSearchOutput

@{
    Layout = null;
}

<p>Co <strong>@string.Format("{0:N0}", @Model.RowCount)</strong> khách hàng trong tổng số <strong>@string.Format("{0:N0}", @Model.PageCount)</strong> trang</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Tên khách hàng</th>
            <th>Liên hệ</th>
            <th>Địa chỉ</th>
            <th>Thành phố</th>
            <th>Quốc gia</th>
            <th>Mã bưu chính</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.CustomerName</td>
                <td>@item.ContactName</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.PostalCode</td>
                <td>@item.Email</td>
                <td class="text-right">
                    <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-primary">Sửa</a>
                </td>
                <td>
                    <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>
