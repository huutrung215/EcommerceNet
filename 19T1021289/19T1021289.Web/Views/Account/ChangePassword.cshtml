@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Account/ChangePassword" method="post">
            @Html.AntiForgeryToken()
            @{
                var userAccount = Converter.CookieToUserAccount(User.Identity.Name);
            }
            <div class="form-group">
                <label class="control-label col-sm-2" for="">Tên đăng nhập:</label>
                <div class="col-sm-10">
                    <input name="userName" value="@userAccount.Email" type="text" class="form-control" placeholder="Email">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Mật khẩu cũ:</label>
                <div class="col-sm-10">
                    <input name="oldPassword" value="@userAccount.Password" type="password" class="form-control" placeholder="Old Password">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="">Mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input name="newPassword" type="password" class="form-control" placeholder="New Password">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Nhập lại mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input name="confirmPassword" type="password" class="form-control" placeholder="Confirm New Password">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Lưu dữ liệu</button>
                    <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

</html>
