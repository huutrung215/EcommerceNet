@model _19T1021289.DomainModels.Category
@{
    ViewBag.Title = $"Xóa {Model.CategoryName}";
}


<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Các mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">Đồng ý xóa</button>
                    <a href="~/Category" class="btn btn-warning">Quay lại</a>
                </div>
            </div>

        </form>
    </div>
</div>





