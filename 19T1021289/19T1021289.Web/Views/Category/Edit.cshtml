@model _19T1021289.DomainModels.Category

@{
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Save" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.CategoryID)
            <div class="form-group">
                <label class="control-label col-sm-2" for="">Tên loại hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="">Các mặt hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Lưu dữ liệu</button>
                    <a href="~/Category" class="btn btn-warning">Quay lại</a>
                </div>
            </div>

        </form>
    </div>
</div>





