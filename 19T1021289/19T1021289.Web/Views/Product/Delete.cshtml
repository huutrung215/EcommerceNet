@model _19T1021289.DomainModels.Product
@{
    ViewBag.Title = $"Xóa {Model.ProductName}";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/Product/Delete/@Model.ProductID" method="post">
            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group">
                        <label class="control-label col-sm-2">Tên mặt hàng:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.ProductName</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Đơn vị tính:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Unit</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Giá hàng:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Price</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash"></i> Đồng ý xóa
                            </button>
                            <a class="btn btn-warning" href="~/product">
                                <i class="fa fa-ban"></i> Quay lại
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="flex-shrink-0">
                        <img src="~/Photo/@Model.Photo"
                             alt="Generic placeholder image" class="img-fluid"
                             style="width: 180px; border-radius: 10px;">
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

