@model _19T1021289.DomainModels.ProductPhoto

@{
    ViewBag.Title = "Xóa ảnh mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Product/Delete/@Model.PhotoID" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.PhotoID)
            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="">Mô tả:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Description</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="">Thứ tự hiển thị:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.DisplayOrder</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ẩn ảnh:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.IsHidden</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-danger">Đồng ý xóa</button>
                            <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="flex-shrink-0">
                        <img src="~/Photo/@Model.Photo"
                             alt="Generic placeholder image" class="img-fluid"
                             style="width: 180px; border-radius: 10px;">
                    </div>
                </div>
        </form>
    </div>
</div>



