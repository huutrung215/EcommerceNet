@model _19T1021289.Web.Models.ProductSearchOutput

@{
    Layout = null;
}


<p>Có <strong>@string.Format("{0:N0}", @Model.RowCount)</strong> mặt hàng trong tổng số <strong>@string.Format("{0:N0}", @Model.PageCount)</strong> trang</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Ảnh</th>
            <th>Tên mặt hàng</th>
            <th>Đơn vị</th>
            <th>Gía</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    <img src="~/Photo/@item.Photo"
                         alt="Generic placeholder image" class="img-fluid"
                         style="width: 20%; border-radius: 10px;">
                </td>
                <td>@item.ProductName</td>
                <td>@item.Unit</td>
                <td>@item.Price</td>
                <td class="text-right">
                    <a href="~/Product/Edit/@item.ProductID" class="btn btn-primary">Sửa</a>
                </td>
                <td>
                    <a href="~/Product/Delete/@item.ProductID" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>