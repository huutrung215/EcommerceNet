@model _19T1021289.DomainModels.OrderDetail
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form action="~/Order/UpdateDetail" method="post" class="form-horizontal">
            @Html.HiddenFor(m => m.OrderID)
            @Html.HiddenFor(m => m.ProductID)
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật chi tiết đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-sm-3">Tên mặt hàng:</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @placeholder = "", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Đơn vị tính:</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Unit, new { @class = "form-control", @placeholder = "", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Số lượng:</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(m => m.Quantity, "", new { @style = "color:#f00" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Giá bán:</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.SalePrice, new { @class = "form-control", @placeholder = "" })
                        @Html.ValidationMessageFor(m => m.SalePrice, "", new { @style = "color:#f00" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

