@model _19T1021289.DomainModels.Employee

@{
    ViewBag.Title = "Xóa nhân viên";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Họ:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.LastName</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.FirstName</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ngày sinh:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.BirthDate</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Email</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="">Ghi chú:</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Notes</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-danger">Đồng ý xóa</button>
                            <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="flex-shrink-0">
                        <img src="~/Photo/@Model.Photo"
                             alt="Generic placeholder image" class="img-fluid"
                             style="width: 180px; border-radius: 10px;">
                    </div>
                </div>
        </form>
    </div>
</div>



