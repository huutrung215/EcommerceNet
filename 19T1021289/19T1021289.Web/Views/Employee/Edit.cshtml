@model _19T1021289.DomainModels.Employee
@{

}


<style>
    .div-img {
        width: 100%;
        height: 240px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

        .div-img img {
            position: absolute;
            width: 55%;
            height: 100%;
            object-fit: cover;
            object-position: center;
/*            border: 1px solid #555;
*/        }
</style>

<div class="box box-primary">
    <div class="box-body">
        <div class="row">
            <div class="col-md-8">
                <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.EmployeeID)
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Họ:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:#f00" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ngày sinh:</label>
                        <div class="col-sm-10">
                            <div class='input-group date' id='datetimepicker1'>
                                <input placeholder="Select date" id="" value="@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)"
                                       name="birthday" type='text' class="form-control" />
                                @* @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", @placeholder = "" })*@
                                @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color:#f00" })
                                @Html.HiddenFor(m => m.BirthDate)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="Email">Email:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="">Ảnh:</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.Photo)
                            <input type="file" class="form-control-file" name="uploadPhoto" id="fileInput" accept="image/*" />
                            @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color:#f00" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="Notes">Ghi chú:</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", @placeholder = "", @rows = "4" })
                            @* <textarea class="form-control" id="Notes" name="Notes" value="@Model.Notes" rows="4">@Model.Notes
                            </textarea>*@
                            @Html.ValidationMessageFor(m => m.Notes, "", new { @style = "color:#f00" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Lưu dữ liệu</button>
                            <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-4">
                <div class="div-img">
                    <i class="fa fa-upload"></i>
                    <h3>Upload Image</h3>
                    <p>Image size must be less than <span>2MB</span></p>
                    <img id="preview" src="~/Photo/@Model.Photo" alt="Image Preview">
                </div>
            </div>
        </div>
    </div>

    <script>
        const fileInput = document.getElementById("fileInput");
        const preview = document.getElementById("preview");

        fileInput.addEventListener("change", function () {
            const file = this.files[0];
            const reader = new FileReader();

            reader.addEventListener("load", function () {
                preview.src = reader.result;
                preview.style.display = "block";
            });

            reader.readAsDataURL(file);
        });
       /* flatpickr("input[type=date]", {});*/
    </script>
</div>



