<style>
    .div-img {
        width: 100%;
        height: 240px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }



        .div-img img {
            position: absolute;
            width: 50%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            border: 1px solid #555;
        }

</style>

<div class="box box-primary">
    <div class="box-body">
        <div class="row">
            <div class="col-md-8">
                <form class="form-horizontal" action="~/Employee/Save">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Họ:</label>
                        <div class="col-sm-10">
                            <input type="text" value="@Model.LastName" class="form-control" id="LastName" name="LastName" placeholder="" autofocus>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Tên:</label>
                        <div class="col-sm-10">
                            <input type="text"  value="@Model.FirstName" class="form-control" id="FristName" name="FristName" placeholder="">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Ngày sinh:</label>
                        <div class="col-sm-10">
                            <input type="date" value="@Model.BirthDate" class="form-control" id="BirthDate" name="BirthDate" placeholder="">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email:</label>
                        <div class="col-sm-10">
                            <input type="text" value="@Model.Email" class="form-control" id="Email" name="Email" placeholder="">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="">Ảnh:</label>
                        <div class="col-sm-10">
                            <input type="file" class="form-control-file" value="@Model.Photo" name="imageToUpload" id="fileInput" accept="image/*">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="Notes">Ghi chú:</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="Notes" name="Notes" rows="4"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Lưu dữ liệu</button>
                            <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-4">
                <div class="div-img">
                    <i class="fa fa-upload"></i>
                    <h3>Upload Image</h3>
                    <p>Image size must be less than <span>2MB</span></p>
                    <img id="preview" src="#" alt="Image Preview" style="display:none;">
                </div>
            </div>
        </div>
    </div>
    <script>

        const fileInput = document.getElementById("fileInput");
        const preview = document.getElementById("preview");

        fileInput.addEventListener("change", function () {
            const file = this.files[0];
            const reader = new FileReader();

            reader.addEventListener("load", function () {
                preview.src = reader.result;
                preview.style.display = "block";
            });

            reader.readAsDataURL(file);
        });
    </script>

</div >





